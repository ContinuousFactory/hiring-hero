%br
%ol.breadcrumb
  %li
    %a{:href => "/"} Home
  %li.active Interviewees

%h3 Interviewees
.row
  .col-md-5
    = form_tag(interviewee_path(@conn, :invite), class: "form-inline")
      .form-group
        = tag :input, type: :email, name: "email", placeholder: "Email", class: "form-control input-sm"
        = tag :input, type: :submit, value: "Send invitation", class: "btn btn-sm"

%table.table
  %thead
    %tr
      %th Name
      %th Email
      %th
  %tbody
    - for interviewee <- @interviewees do
      %tr
        %td= interviewee.name
        %td= interviewee.email
        %td.text-right
          - link to: "#", method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" do
            %span.glyphicon.glyphicon-trash
